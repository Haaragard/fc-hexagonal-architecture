<phpunit
    bootstrap="tests/bootstrap.php"
    stopOnFailure="true"
    stopOnError="true"
    stopOnWarning="true"
>
    <testsuites>
        <testsuite name="Unit Tests">
            <directory>tests\Unit</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
    </source>
    <php>
        <ini name="error_reporting" value="-1" />
        <server name="KERNEL_DIR" value="app/" />
    </php>
</phpunit>
